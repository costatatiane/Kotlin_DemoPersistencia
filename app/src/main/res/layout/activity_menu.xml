<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity">

    <Button
            android:text="Shared Preferences"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:id="@+id/btSharedPreferences"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Banco de Dados"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:id="@+id/btDatabase"
            app:layout_constraintStart_toStartOf="@+id/btSharedPreferences"
            app:layout_constraintEnd_toEndOf="@+id/btSharedPreferences" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btSharedPreferences" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Fechar"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:id="@+id/btClose"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btDatabase" app:layout_constraintStart_toStartOf="@+id/btDatabase"
            app:layout_constraintEnd_toEndOf="@+id/btDatabase" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>