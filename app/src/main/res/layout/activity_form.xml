<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sharedPreferences.FormActivity">

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:id="@+id/textInputLayout">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome" android:id="@+id/etName"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
            android:text="Salvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btSave" app:layout_constraintStart_toStartOf="@+id/textInputLayout"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout"/>
    <Button
            android:text="Recuperar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btRecover" app:layout_constraintEnd_toEndOf="@+id/btSave"
            app:layout_constraintStart_toStartOf="@+id/btSave"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btSave"/>
    <Button
            android:text="Apagar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btDelete" app:layout_constraintEnd_toEndOf="@+id/btRecover"
            app:layout_constraintStart_toStartOf="@+id/btRecover" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btRecover"/>
</androidx.constraintlayout.widget.ConstraintLayout>